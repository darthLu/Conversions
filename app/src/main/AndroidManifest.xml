<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lwade.conversions">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Length"
            android:label="Length Conversion Options"/>
        <activity android:name=".Speed"
            android:label="Speed Conversion Options"/>
        <activity android:name=".Temperature"
            android:label="Temperature Conversion Options"/>


        <activity android:name=".Foot_Mile"
            android:label="Foot to Mile Conversion"/>
        <activity android:name=".Meter_Foot"
            android:label="Meter to Foot Conversion"/>
        <activity android:name=".Inch_Foot"
            android:label="Inch to Foot Conversion"/>

        <activity android:name=".Fah_Cel"
            android:label="Fahrenheit to Celsius Conversion"/>
        <activity android:name=".Cel_Kel"
            android:label="Celsius to Kelvin Conversion"/>
        <activity android:name=".Fah_Kel"
            android:label="Fahrenheit to Kelvin Conversion"/>

        <activity android:name=".Mph_Kmph"
            android:label="MPH to KMPH Conversion"/>
        <activity android:name=".Mps_Mph"
            android:label="M/S to MPH Conversion"/>
        <activity android:name=".Knot_Mph"
            android:label="Knots to MPH Conversion"/>
    </application>

</manifest>